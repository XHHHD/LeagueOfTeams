<Page x:Class="LeagueOfTeamsUI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeagueOfTeamsUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Button x:Name="LoginStatsButton" Margin="10" MinHeight="260" MinWidth="280" Foreground="{x:Null}" BorderBrush="{x:Null}"
                Click="LoginStatsButton_Click">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FFFFEA00" Offset="0"/>
                    <GradientStop Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Castellar" FontSize="50"
                   FontWeight="Bold" Text="Admin"/>
    </Grid>
</Page>
