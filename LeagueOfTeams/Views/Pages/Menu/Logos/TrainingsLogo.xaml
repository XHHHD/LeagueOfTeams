<Page x:Class="LeagueOfTeamsUI.Views.Pages.Menu.Logos.TrainingsLogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeagueOfTeamsUI.Views.Pages.Menu.Logos"
      mc:Ignorable="d" 
      d:DesignHeight="125" d:DesignWidth="240"
      Title="TrainingLogo">

    <ToggleButton x:Name="TButton" Background="{x:Null}" BorderBrush="{x:Null}" Click="ToggleButton_Click">
        <Grid>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="TEAM" FontSize="60" FontFamily="Arial Black"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="TRAININGS" FontSize="36" FontFamily="Arial Black"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </ToggleButton>
</Page>