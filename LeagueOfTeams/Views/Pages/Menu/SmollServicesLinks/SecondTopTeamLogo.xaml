<Page x:Class="LeagueOfTeamsUI.Views.Pages.Menu.SmollServicesLinks.SecondTopTeamLogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeagueOfTeamsUI.Views.Pages.Menu.SmollServicesLinks"
      mc:Ignorable="d" 
      d:DesignHeight="180" d:DesignWidth="328"
      Title="SecondTopTeamLogo">

    <Button Height="180" Width="328" Click="TeamButton_Click">
        <Button.Background>
            <SolidColorBrush Color="#FFC6FBFF" Opacity="0.8"/>
        </Button.Background>
        <StackPanel Orientation="Vertical">
            <Border Background="Black" Height="120" Width="120" Margin="0,10,0,0">
                <Image x:Name="TeamRank" Margin="3"/>
            </Border>
            <TextBlock x:Name="TeamName" FontFamily="Castellar" FontSize="40" Text="Team Name"/>
        </StackPanel>
    </Button>
</Page>
