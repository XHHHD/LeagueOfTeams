<Page x:Class="LeagueOfTeamsUI.Views.Pages.Menu.SmollServicesLinks.TeamSmollLogo930x60"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeagueOfTeamsUI.Views.Pages.Menu.SmollServicesLinks"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="930"
      Title="TeamSmollLogo930x60">

    <Button x:Name="TeamButton" Background="{x:Null}" Click="TeamButton_Click">
        <Grid Height="60" Width="930">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="TeamLogo" Height="50" Width="50" Margin="2"
                       Source="/Resources/Default/icons8-ос-free-bsd-100-white.png"/>
                <TextBlock x:Name="TeamName" FontFamily="Arial Black" FontSize="40" Text="TeamName" VerticalAlignment="Center"
                           Margin="3"/>
            </StackPanel>
            <Image x:Name="TeamRank" Height="50" Width="50" HorizontalAlignment="Right" Margin="2"
                   Source="/Resources/Default/icons8-ос-free-bsd-100-black.png"/>
        </Grid>
    </Button>
</Page>
