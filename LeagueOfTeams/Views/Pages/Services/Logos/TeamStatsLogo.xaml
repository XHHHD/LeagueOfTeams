<Page x:Class="LeagueOfTeamsUI.Views.Pages.Services.Logos.TeamStatsLogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeagueOfTeamsUI.Views.Pages.Services.Logos"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="240"
      Title="TeamStatsLogo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="TeamLogo" Grid.Row="0" Source="/Img/Default/icons8-ос-free-bsd-100-white.png" />
        <TextBlock x:Name="TeamName" Text="Team Name" Grid.Row="1" FontSize="30" FontFamily="Arial Black"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
