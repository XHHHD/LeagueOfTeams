<Page x:Class="LeagueOfTeamsUI.Views.Pages.Services.Logos.UserStatsLogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeagueOfTeamsUI.Views.Pages.Services.Logos"
      mc:Ignorable="d"
      d:DesignHeight="125" d:DesignWidth="240"
      Title="UserStatsLogo">

    <ToggleButton x:Name="TButton" Background="{x:Null}" BorderBrush="{x:Null}" Click="ToggleButton_Click">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Height="100" Width="100" Background="Black">
                <Image x:Name="PlayerLogo" Margin="3" Source="/Img/Default/icons8-ос-free-bsd-100-black.png" />
            </Border>
            <TextBlock Text="Statistics" Grid.Row="1" FontSize="30" FontFamily="Arial Black"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </ToggleButton>
</Page>
